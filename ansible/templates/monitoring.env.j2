# Monitoring Stack Environment Variables
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password | default('admin') }}
PROMETHEUS_PORT={{ prometheus_port | default('9090') }}
GRAFANA_PORT={{ grafana_port | default('3000') }}
NGINX_PORT={{ nginx_port | default('80') }}

# Discord Webhook for Alertmanager
DISCORD_WEBHOOK_URL={{ discord_webhook_url | default('') }}

# Network Configuration
VICE_NETWORK={{ vice_network | default('172.16.20.0/24') }}
MONITORING_NETWORK={{ monitoring_network | default('172.20.0.0/16') }}

# Service URLs
PROMETHEUS_URL=http://localhost:{{ prometheus_port | default('9090') }}
GRAFANA_URL=http://localhost:{{ grafana_port | default('3000') }}
